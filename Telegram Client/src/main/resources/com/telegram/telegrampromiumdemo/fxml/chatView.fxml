<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.telegram.telegrampromiumdemo.fxml.ChatView">

    <top>
        <HBox fx:id="chatHeader" spacing="8" styleClass="header">
            <ImageView fx:id="chatAvatar" fitWidth="36" fitHeight="36"/>
            <VBox>
                <Label fx:id="chatTitle" styleClass="bold"/>
                <Label fx:id="chatSubtitle" styleClass="muted"/> <!-- online/last seen -->
            </VBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button onAction="#onSearchInChat" text="%chat.search"/>
            <Button onAction="#onOpenInfo" text="%chat.info"/>
        </HBox>
    </top>
    <center>
        <ListView fx:id="messageListView"/>  <!-- virtualized -->
    </center>
    <bottom>
        <HBox spacing="8" styleClass="composer">
            <Button onAction="#onAttach" text="ðŸ“Ž"/>
            <TextArea fx:id="inputArea" prefRowCount="2" promptText="%chat.typeMessage"/>
