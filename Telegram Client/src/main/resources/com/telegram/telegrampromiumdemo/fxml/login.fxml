<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.telegram.telegrampromiumdemo.controller.LoginController"
      spacing="10" alignment="CENTER" prefWidth="320" prefHeight="240"
      stylesheets="@/com/telegram/telegrampromiumdemo/style/base.css">
    <children>
        <Label text="Login"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button fx:id="signInButton" text="Sign in" onAction="#onSignIn"/>
        <Label fx:id="statusLabel"/>
    </children>
</VBox>
