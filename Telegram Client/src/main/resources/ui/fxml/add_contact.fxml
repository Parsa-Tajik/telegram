<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.telegram.telegrampromium.controller.AddContactController"
            styleClass="tgm-page">
    <stylesheets><URL value="@../css/add_contact.css"/></stylesheets>

    <top>
        <HBox spacing="12" styleClass="nc-header">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
            <Button text="←" onAction="#onBack" styleClass="btn-ghost"/>
            <Label text="افزودن مخاطب" styleClass="nc-title"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets top="18" right="14" bottom="14" left="14"/></padding>

            <TextField fx:id="nameInput" promptText="نام" />
            <TextField fx:id="phoneInput" promptText="شماره تلفن (+989...)" />
            <HBox spacing="10">
                <Button text="انصراف" onAction="#onBack" styleClass="btn-ghost"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="ذخیره" onAction="#onSave" styleClass="nc-action"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
