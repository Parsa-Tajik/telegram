<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.telegram.telegrampromium.controller.ChatController"
            styleClass="tgm-chat-screen">
    <stylesheets>
        <URL value="@../css/chat.css"/>
    </stylesheets>

    <!-- Header -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" BorderPane.alignment="CENTER"
              styleClass="tgm-header">
            <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>

            <Button fx:id="backBtn" text="←" styleClass="tgm-back"/>
            <StackPane fx:id="headerAvatar" prefWidth="36" prefHeight="36"
                       styleClass="tgm-avatar">
                <Circle radius="18"/>
            </StackPane>

            <VBox spacing="2">
                <Label fx:id="headerTitle" styleClass="tgm-title"/>
                <Label fx:id="headerSubtitle" styleClass="tgm-subtitle" text="last seen recently"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS"/>
            <!-- icon-only search -->
            <Button fx:id="searchBtn" text="🔍" styleClass="tgm-search"/>
        </HBox>
    </top>

    <!-- Messages list -->
    <center>
        <StackPane>
            <ListView fx:id="messagesList" styleClass="tgm-msg-list"/>
            <Label fx:id="newChip" styleClass="chip-new label"
                   text="1 پیام جدید"
                   visible="false" managed="false"
                   onMouseClicked="#onNewChipClick"
                   StackPane.alignment="BOTTOM_CENTER">
                <StackPane.margin>
                    <!-- فاصله از پایین تا بالای کامپوزر؛ اگر کامپوزرت ارتفاع ثابت مثلاً ~56px دارد -->
                    <Insets top="0" right="0" bottom="64" left="0"/>
                </StackPane.margin>
            </Label>
        </StackPane>
    </center>

    <!-- Composer -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="tgm-composer">
            <padding><Insets top="10" right="12" bottom="12" left="12"/></padding>

            <!-- Stack برای reply-preview + textarea -->
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <!-- ریپلای‌پریویو: پیش‌فرض مخفی -->
                <HBox fx:id="replyBox" spacing="8" visible="false" managed="false" styleClass="reply-preview">
                    <Label fx:id="replyTitle" styleClass="reply-title" text=""/>
                    <Label fx:id="replySnippet" styleClass="reply-snippet" text=""/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button fx:id="replyClose" text="✕" styleClass="btn-ghost"/>
                </HBox>

                <TextArea fx:id="messageInput"
                          promptText="Write a message..."
                          prefRowCount="1"
                          styleClass="tgm-input"/>
            </VBox>

            <Button fx:id="sendBtn" text="➤" disable="true" styleClass="tgm-send"/>
        </HBox>
    </bottom>
</BorderPane>
